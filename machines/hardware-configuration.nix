{
  imports =
    [ (modulesPath + "/installer/scan/not-detected.nix")
    ];

  boot.initrd.availableKernelModules = [ "nvme" "ehci_pci" "xhci_pci_renesas" "xhci_pci" "usbhid" "usb_storage" "sd_mod" "rtsx_pci_sdmmc" ];
  boot.initrd.kernelModules = [ ];
  boot.kernelModules = [ "kvm-amd" ];
  boot.extraModulePackages = [ ];

  fileSystems."/" =
    { device = "/dev/disk/by-uuid/69aabb79-3f34-40b1-95ab-7460de890001";
      fsType = "btrfs";
      options = [ "subvol=@root"
        "ssd"
        "noatime"
        "discard=async"
        "compress=zstd:3"
      ];
    };

  fileSystems."/home" =
    { device = "/dev/disk/by-uuid/69aabb79-3f34-40b1-95ab-7460de890001";
      fsType = "btrfs";
      options = [ "subvol=@home"
        "ssd"
        "noatime"
        "discard=async"
        "compress=zstd:1"
        "autodefrag"
      ];
    };

  fileSystems."/nix" =
    { device = "/dev/disk/by-uuid/69aabb79-3f34-40b1-95ab-7460de890001";
      fsType = "btrfs";
      options = [ "subvol=@nix"
        "ssd"
        "noatime"
        "discard=async"
        "compress=zstd:5"
      ];
    };

  fileSystems."/boot" =
    { device = "/dev/disk/by-uuid/4820-187B";
      fsType = "vfat";
      options = [ "fmask=0022" "dmask=0022" ];
    };

  swapDevices = [ ];

  # Enables DHCP on each ethernet and wireless interface. In case of scripted networking
  # (the default) this is the recommended approach. When using systemd-networkd it's
  # still possible to use this option, but it's recommended to use it in conjunction
  # with explicit per-interface declarations with `networking.interfaces.<interface>.useDHCP`.
  networking.useDHCP = lib.mkDefault true;
  networking.networkmanager.enable = true;
  # networking.interfaces.enp2s0f0.useDHCP = lib.mkDefault true;
  # networking.interfaces.enp5s0.useDHCP = lib.mkDefault true;
  # networking.interfaces.wlp3s0.useDHCP = lib.mkDefault true;

  nixpkgs.hostPlatform = lib.mkDefault "x86_64-linux";
  hardware.cpu.amd.updateMicrocode = lib.mkDefault config.hardware.enableRedistributableFirmware;
}
